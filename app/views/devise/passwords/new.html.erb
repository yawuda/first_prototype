<div class="password-forgot">
  <div class="container-fluid">
    <div class="login_card">
      <div class="top-title">
        <div class="welcome_text company_name">
          AirbnWine
        </div>

        <div class="welcome_text strip_line">
          Fine wine. Good price.
        </div>
      </div>
      <div class="title">
        <h2>Forgot your password?</h2>
        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>
      </div>
      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true, placeholder: "enter your email address" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary special  font-weight-light" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
